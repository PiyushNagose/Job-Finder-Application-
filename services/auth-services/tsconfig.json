{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],

    "rootDir": "src",
    "outDir": "dist",

    "types": ["node"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
